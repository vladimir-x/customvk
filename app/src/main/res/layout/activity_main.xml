<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.dude.androapp.MainActivity">



        <WebView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/mainweb" tools:layout_editor_absoluteY="8dp" tools:layout_editor_absoluteX="8dp">
        </WebView>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
        >
            <Button
                    android:text="M"
                    android:visibility="invisible"
                    android:layout_width="50dp"
                    android:layout_height="50dp" android:id="@+id/button" android:textSize="10sp"/>
        </LinearLayout>


</FrameLayout>
